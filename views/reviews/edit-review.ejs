<main class="edit-review">
    <h1>Edit Your Review</h1>
  
    <% if (locals.flash && locals.flash.notice && locals.flash.notice.length > 0) { %>
        <div class="flash-wrapper">
          <ul>
            <% locals.flash.notice.forEach(function(msg) { %>
              <li><%= msg %></li>
            <% }) %>
          </ul>
        </div>
      <% } %>
  
    <form action="/reviews/update" method="post">
      <label for="review_rating">Rating:</label>
      <select name="review_rating" id="review_rating" required>
        <option value="">-- Rate this vehicle --</option>
        <option value="5" <%= review.review_rating == 5 ? "selected" : "" %>>★★★★★ - Excellent</option>
        <option value="4" <%= review.review_rating == 4 ? "selected" : "" %>>★★★★☆ - Good</option>
        <option value="3" <%= review.review_rating == 3 ? "selected" : "" %>>★★★☆☆ - Average</option>
        <option value="2" <%= review.review_rating == 2 ? "selected" : "" %>>★★☆☆☆ - Fair</option>
        <option value="1" <%= review.review_rating == 1 ? "selected" : "" %>>★☆☆☆☆ - Poor</option>
      </select>
  
      <label for="review_text">Review:</label>
      <textarea name="review_text" id="review_text" rows="5" required><%= review.review_text %></textarea>
  
      <input type="hidden" name="review_id" value="<%= review.review_id %>">
      <input type="hidden" name="inv_id" value="<%= review.inv_id %>">
  
      <button type="submit">Update Review</button>
    </form>
  </main>
  