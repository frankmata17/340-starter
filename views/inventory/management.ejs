<main class="management-view">
  <% if (messages && messages().length > 0) { %>
    <div class="flash-wrapper">
      <%- messages() %>
    </div>
  <% } %>

  <h1>Inventory Management</h1>

  <p>Use the links below to manage classifications and inventory items:</p>
  <ul class="management-links">
    <li><a href="/inv/add-classification">Add New Classification</a></li>
    <li><a href="/inv/add-inventory">Add New Inventory Item</a></li>
  </ul>

  <h2>Manage Inventory</h2>
  <p>Select a classification to view available inventory items:</p>

  <%- classificationList %>

  <table id="inventoryDisplay"></table>
  <noscript>JavaScript must be enabled to use this page.</noscript>

  <script src="/js/inventory.js"></script>
</main>
