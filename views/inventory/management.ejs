<main class="management-view">
  <% if (typeof messages !== 'undefined' && messages().length > 0) { %>
    <div class="flash-wrapper">
      <%- messages() %>
    </div>
  <% } %>

  <h1>Inventory Management</h1>

  <p>Use the links below to manage the inventory.</p>
  <ul>
    <li><a href="/inv/add-classification">Add New Classification</a></li>
    <li><a href="/inv/add-inventory">Add New Vehicle</a></li>
  </ul>

  <% if (classificationList && classificationList.length > 0) { %>
    <h2>Modify Existing Inventory</h2>
    <form id="classificationForm">
      <label for="classification_id">Select a classification:</label>
      <select id="classification_id" name="classification_id" required>
        <option value="">-- Choose a classification --</option>
        <%- classificationList %>
      </select>
    </form>

    <noscript><strong>JavaScript must be enabled to use this page.</strong></noscript>
    <table id="inventoryDisplay"></table>
  <% } %>
</main>
